<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeItem">

        <ImageView
            android:id="@+id/imgUpComing"
            android:layout_width="80dp"
            android:layout_height="102dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <TextView

            android:id="@+id/txtTitleMovie"
            android:layout_width="193dp"
            android:layout_height="29dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgUpComing"
            android:text="Title Poster"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_24"
            android:id="@+id/imgStar"
            android:layout_below="@id/txtTitleMovie"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/imgUpComing"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtRating"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgStar"
            android:layout_below="@id/txtTitleMovie"
            android:layout_marginTop="4dp"
            android:text="Overview"
            android:layout_marginLeft="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relase Date :"
            android:id="@+id/txtReleaseDate"
            android:layout_below="@+id/txtRating"
            android:layout_toRightOf="@id/imgUpComing"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"
            android:layout_toRightOf="@id/txtReleaseDate"
            android:text="2023-07-26"
            android:layout_below="@id/txtRating"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language :"
            android:id="@+id/txtOriginalLanguage"
            android:layout_below="@+id/txtReleaseDate"
            android:layout_toRightOf="@id/imgUpComing"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLanguage"
            android:text="english"
            android:layout_marginTop="4dp"
            android:layout_below="@id/txtDate"
            android:layout_toRightOf="@id/txtOriginalLanguage"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>